{% extends '_layoutEmail.html.twig' %}

{% block body %}
  <h1>
    New episode
    {{ episode.title }}
    created
  </h1>
  <p>From the movie {{ episode.season.movie.title }}</p>
  <p>Hello, the new episode
    {{ episode.title }}
    has been created on Wild Series</p>

  <p>Synopsis :
    {{ episode.synopsis }}</p>
  <a href="{{ absolute_url(path('episode_show', { slug: episode.slug })) }}">En savoir plus</a>
{% endblock %}
