{% extends 'base.html.twig' %}

{% block title %}Film

{% endblock %}

{% block body %}
	<h1>Nom de la saison:
		{{ season.title }}</h1>
	<p>Season numéro :{{ season.number }}</p>
	{% for episode in season.episodes %}
		<ul>
			<li>
				<p>
					nom de l'épisode:
					{{ episode.title }}
					<a href="{{ path('movie_episode_show', {"movie": "movie.id", "season":"season.id", "episode": "episode.id"}) }}">détail episode</a>
				</p>
			</li>
		</ul>

	{% endfor %}

	<a href="{{ path('movie_index') }}">Retour à la liste de film</a>
{% endblock %}
